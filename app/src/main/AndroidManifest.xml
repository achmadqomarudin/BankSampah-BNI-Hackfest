<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.achmadqomarudin.banksampah">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".penjual.DaftarPenjual"
            android:label="@string/title_activity_daftar_penjual"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".pengepul.DaftarPengepul"
            android:label="@string/title_activity_daftar_pengepul"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".pengepul.LoginPengepul"
            android:label="@string/title_activity_login_pengepul"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".penjual.LoginPenjual"
            android:label="@string/title_activity_login_penjual"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".penjual.DashboardPenjual"
            android:screenOrientation="portrait"
            android:theme="@style/MyTheme" />
        <activity
            android:name=".pengepul.DashboardPengepul"
            android:screenOrientation="portrait"
            android:theme="@style/MyTheme" />
        <activity android:name=".pengepul.nasabah.BankNasabahActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyTheme" />
        <activity android:name=".pengepul.nasabah.LuarNasabahActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyTheme" ></activity>
    </application>

</manifest>