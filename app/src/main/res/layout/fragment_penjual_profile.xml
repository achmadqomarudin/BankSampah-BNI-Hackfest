<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_alignParentBottom="true"
    tools:context="com.example.achmadqomarudin.banksampah.penjual.fragment.ProfilePenjualFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:saveEnabled="true"
            android:scaleType="centerCrop"
            android:layout_marginRight="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivImage"
                android:layout_marginTop="50dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:saveEnabled="true"
                android:src="@drawable/poto_profile"/>

            <Button
                android:id="@+id/btnSelectPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="change foto"
                android:textAllCaps="false"
                android:layout_gravity="center"/>

            <!--<de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/poto_profile"/>-->

            <EditText
                android:id="@+id/id_nama_lengkap_penjual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textAutoComplete"
                android:layout_marginTop="30dp"
                android:hint="Nama Lengkap"
                android:maxLines="1"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/id_email_penjual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textAutoComplete"
                android:hint="Email"
                android:maxLines="1"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/id_password_penjual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true" />

            <EditText
                android:id="@+id/id_alamat_lengkap_penjual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textAutoComplete"
                android:hint="Alamat Lengkap"
                android:maxLines="1"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/id_no_telpon_penjual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="No. Telpon / Whatsapp"
                android:maxLines="1"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/id_no_ktp_penjual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="No. KTP"
                android:maxLines="1"
                android:singleLine="true"/>

            <Button
                android:id="@+id/btn_logout_penjual"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="Logout"
                android:background="@android:color/holo_orange_dark"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
